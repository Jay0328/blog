{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "noEmit": true, 
    "strict": true,
    "noImplicitAny": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/"
  ]
}